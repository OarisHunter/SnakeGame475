<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SnakeGame.standard" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_m</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pale_blue</item>
        <item name="colorSecondaryVariant">@color/blue_steel</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">?colorPrimary</item>
        <item name="android:textColorSecondary">?colorPrimary</item>
        <item name="android:actionMenuTextColor">?colorPrimary</item>
    </style>

    <style name="GameButton">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:drawableTint">?colorOnPrimary</item>
    </style>
</resources>