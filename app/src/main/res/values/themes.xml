<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SnakeGame.standard" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_m</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_m</item>
        <item name="colorSecondaryVariant">@color/apple_red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">?colorPrimary</item>
        <item name="android:textColorSecondary">?colorPrimary</item>
        <item name="android:actionMenuTextColor">?colorPrimary</item>
    </style>

    <style name="Theme.SnakeGame.classic" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_m</item>
        <item name="colorPrimaryVariant">@color/gray_m</item>
        <item name="colorOnPrimary">@color/olive</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/snake_green</item>
        <item name="colorSecondaryVariant">@color/apple_red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">?colorPrimary</item>
        <item name="android:textColorSecondary">?colorPrimary</item>
        <item name="android:actionMenuTextColor">?colorPrimary</item>
    </style>

    <style name="Theme.SnakeGame.rgb" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rgbGreen</item>
        <item name="colorPrimaryVariant">@color/gray_d</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rgbBlue</item>
        <item name="colorSecondaryVariant">@color/rgbRed</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">?colorPrimary</item>
        <item name="android:textColorSecondary">?colorPrimary</item>
        <item name="android:actionMenuTextColor">?colorPrimary</item>
    </style>

    <style name="Theme.SnakeGame.noir" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_m</item>
        <item name="colorPrimaryVariant">@color/gray_d</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_l</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">?colorPrimary</item>
        <item name="android:textColorSecondary">?colorPrimary</item>
        <item name="android:actionMenuTextColor">?colorPrimary</item>
    </style>

    <style name="GameButton">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:drawableTint">?colorOnPrimary</item>
    </style>

    <style name="ScoreListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="SettingsCategory">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/settings_category_back</item>
    </style>

    <style name="SettingsCategoryText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>
</resources>